<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_bottomsheet_category_creation_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/text_bottomsheet_category_creation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BottomSheetHead"
        android:paddingBottom="24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_bottomsheet_category_creation_title"/>

    <EditText
        android:id="@+id/edit_bottomsheet_category_creation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Body"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text_bottomsheet_category_creation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_bottomsheet_category"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="확인"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_bottomsheet_category_creation"
        app:backgroundTint="@color/secondaryDarkColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>