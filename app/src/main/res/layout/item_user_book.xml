<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="book"
            type="com.example.mylibrary.data.room.entity.Book" />

        <variable
            name="onClickItem"
            type="android.view.View.OnClickListener" />

        <variable
            name="onLongClickItem"
            type="android.view.View.OnLongClickListener" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_iuserbook_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/background_radius"
        android:elevation="1dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_iuserbook"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:imageBook="@{book.image}" />

        <TextView
            android:id="@+id/text_iuserbook_title"
            style="@style/BookTitleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_iuserbook"
            bind:searchText="@{book.title}"
            tools:text="달을 닮은 너에게" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>